<odoo>
	<data>
		<record id="medical_history_procedure_tree" model="ir.ui.view">
			<field name="name">medical_history_procedure_tree</field>
			<field name="model">kb.medical.history.procedure</field>
			<field name="arch" type="xml">
				<list>
					<field name="create_date"/>
					<field name="name"/>
					<field name="procedure"/>
				</list>
			</field>
		</record>

		<record id="medical_history_procedure_form" model="ir.ui.view">
			<field name="name">medical_history_procedure_form</field>
			<field name="model">kb.medical.history.procedure</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group>
							<field name="procedure"/>
						</group>
					</sheet>
					<chatter/>
				</form>
			</field>
		</record>

		<record id="medical_history_treatment_tree" model="ir.ui.view">
			<field name="name">medical_history_treatment_tree</field>
			<field name="model">kb.medical.history.treatment</field>
			<field name="arch" type="xml">
				<list>
					<field name="create_date"/>
					<field name="name"/>
					<field name="treatment"/>
				</list>
			</field>
		</record>

		<record id="medical_history_treatment_form" model="ir.ui.view">
			<field name="name">medical_history_treatment_form</field>
			<field name="model">kb.medical.history.treatment</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group>
							<field name="treatment"/>
						</group>
					</sheet>
					<chatter/>
				</form>
			</field>
		</record>

		<record id="medical_history_accident_tree" model="ir.ui.view">
			<field name="name">medical_history_accident_tree</field>
			<field name="model">kb.medical.accident</field>
			<field name="arch" type="xml">
				<list>
					<field name="create_date"/>
					<field name="accident_number"/>
					<field name="date_of_visit"/>
					<field name="place_of_treatment"/>
					<field name="severity"/>
				</list>
			</field>
		</record>

		<record id="medical_history_accident_form" model="ir.ui.view">
			<field name="name">medical_history_accident_form</field>
			<field name="model">kb.medical.accident</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group>
							<field name="accident_number"/>
							<field name="date_of_visit"/>
							<field name="place_of_treatment"/>
							<field name="severity"/>
						</group>
					</sheet>
					<chatter/>
				</form>
			</field>
		</record>
	</data>
</odoo>